<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/blurred_background">
   
 <fragment android:name="com.google.android.gms.maps.MapFragment"
android:id="@+id/map"
android:layout_height="wrap_content"
android:layout_width="wrap_content"
android:layout_weight="1">
</fragment>
   

   <TableLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_weight="1">
     <TableRow
         android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
         <TextView
         android:id="@+id/tv_radius"
         android:layout_width="wrap_content"
         android:layout_height="25dp"
         android:textSize="20sp"
         android:text="Search by:"
         android:paddingLeft="15dip"
         android:layout_weight="3"
	     android:paddingRight="15dip"
         android:gravity="left" 
         android:ems="14"
         android:background="#f75d5d"/>
       
         </TableRow>
              <TableRow
         android:id="@+id/tableRow9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <RadioGroup
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dip"
        android:layout_weight="25"
        android:checkedButton="@+id/rbradius"
        android:id="@+id/rg">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Radius"
            android:id="@+id/rbradius"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zipcode"
            android:id="@+id/rbzipcode" />
        </RadioGroup>
        <EditText
         android:id="@+id/edittextsearch"
         android:layout_width="100dp"
         android:layout_height="wrap_content"
         android:paddingLeft="15dip"
         android:layout_weight="2"
         android:text = "2.0"
	     android:paddingRight="15dip"
         android:gravity="left"
         android:singleLine="true"
         android:longClickable="false"
         android:inputType="numberDecimal"/>
        
         </TableRow>
     <TableRow
         android:id="@+id/tableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

     <TextView
         android:id="@+id/tv_fromTime"
         android:layout_width="0dip"
         android:layout_height="wrap_content"
         android:paddingLeft="15dip"
         android:layout_weight="3"
	     android:paddingRight="15dip"
         android:gravity="left" />

     <Button
         android:id="@+id/fromButton"
         android:layout_width="0dip"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:onClick="button_click"
         android:text="Set From Time"
         android:textSize="@dimen/get_parkinglots_text_size" />

      </TableRow>
      <TableRow
         android:id="@+id/tableRow7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
     <TextView
        android:id="@+id/tv_ToTime"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:layout_weight="3"
        />
      <Button android:id="@+id/toButton"
	    android:text="Set To Time"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_weight="1"
	    android:textSize="@dimen/get_parkinglots_text_size"
	    />
      </TableRow>
     
      <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
        android:id="@+id/tv_empty"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:layout_weight="3"
        />
       </TableRow>
      <TableRow
        android:id="@+id/tableRow8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

          <Button
              android:id="@+id/getNearByParkingLotsButton"
              android:background="@drawable/button_background"
              android:layout_width="wrap_content"
              android:textColor="#000"
              android:textSize="18sp"
              android:layout_height="45dp"
              android:text="@string/get_nearby_parking_lots"
              android:layout_weight="1" />

    </TableRow>
</TableLayout>
</LinearLayout>
